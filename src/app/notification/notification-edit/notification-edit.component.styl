&:host
  width 100%
  height 100%
  overflow scroll
  position absolute
  top 0
  left 0

  .title
    margin-top 20px
    text-align center
    font-size 20px
    font-weight 700

  .schedule-form
    width 100%
    display flex
    flex-direction column
    align-items center
    padding-bottom 50px

    .schedule-element
      display flex
      flex-direction column
      width 80%
      margin-top 10px

      .label
        font-size 14px
        line-height 18px
        font-weight 700
        margin-left 4px

      .description
        font-size 12px
        line-height 15px
        margin-left 6px
        margin-bottom 2px

    .input-container
      width 100%
      height 35px
      background-color white
      border 1px solid #e0e0e0
      border-radius 5px
      display flex
      align-items center
      position relative

      .select
        -webkit-appearance none
        border none
        background-color #ffffff
        color #616161
        font-size 15px
        height 100%
        flex 1
        margin 0 0 0 10px

      .triangle
        position absolute
        right 10px
        top 12px
        height 10px
        width 10px
        fill #616161
        transform rotate(90deg)

  .schedule-input
    -webkit-appearance none
    border none
    font-size 16px
    flex 1
    margin 0 5px
    line-height 20px
    border none

  .button
    margin-top 40px
    width 80%
    background-color #489BC6
    height 40px
    border 1px solid #e0e0e0
    border-radius 5px
    color #ffffff

    &:active
      background-color rgba(72, 155, 198, 0.8)
