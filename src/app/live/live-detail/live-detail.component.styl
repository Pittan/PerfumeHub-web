.participant-list-title
  font-size 4.8vw
  line-height 5vw
  margin 5vw 2vw 1vw

.participant-list
  display flex
  flex-wrap wrap
  justify-content space-around
  margin-bottom 4vw

.user-cell
  width 18vw
  overflow hidden

.slide-toggle
  margin 2vw 0 4vw

.login-message
  font-size 4vw
  line-height 5vw
  margin 2vw

.user-icon
  height 14vw
  width 14vw
  background-size contain
  background-position center
  background-repeat no-repeat
  border-radius 7vw
  margin 2vw 2vw 0

  &:active
    opacity 0.7

.user-name
  font-size 2vw
  overflow hidden
  text-overflow ellipsis
  text-align center

.live-title
  font-size 5vw
  line-height 6vw
  word-break break-all
  margin 5vw 2vw 4vw
  padding-bottom 4vw
  border-bottom 1px solid #e0e0e0

.live-place
  font-size 4vw
  word-break break-all
  padding 0 2vw

.live-open
.live-start
  font-size 3.6vw
  word-break break-all
  padding 0 2vw

.sebm-google-map-container
  height 50vw

.button-container
  display flex
  justify-content center
  margin 4vw 1vw 2vw

.button
  height 10vw
  flex 1
  margin 0 2vw
  font-size 4vw
  border-radius 2vw

  &.participate
    background-color #489bc6
    color white

  &.non-participate
    background-color #ff5959
    color white

  &.pending
    background-color #0c9613
    color white

  &:active
    opacity 0.7
