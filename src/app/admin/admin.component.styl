&:host
  width 100%
  height 100%

  .btn
    width 90%
    height 44px
    margin 0 auto
    border 1px solid #e0e0e0
    border-radius 5px
    background-color #489BC6
    color #ffffff

    &.login
      margin-top 30px

  .user-info
    display flex
    flex-direction column
    align-items center

    .header
      font-size 22px
      font-weight 700
      text-align center
      margin 15px 0 10px

    .profile-container
      display flex
      justify-content center
      border-bottom 1px solid #e0e0e0
      padding-bottom 5px
      margin 0 10px

      .icon
        height 50px
        width 50px
        border-radius 25px
        background-size contain
        background-repeat no-repeat
        background-position center
        flex none

      .user-container
        display flex
        flex-direction column
        justify-content center
        margin-left 5px

        .name
          line-height 18px
          word-break break-all

        .id
          font-size 12px

    .permission
      font-size 12px
      margin 4px 0


