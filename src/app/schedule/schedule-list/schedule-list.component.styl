&:host
  width 100%
  height 100%
  overflow scroll
  -webkit-overflow-scrolling touch

  .page-title
    margin-top 25px
    font-size 18px
    line-height 22px
    text-align center
    font-weight 700

  .date
    font-size 14px
    line-height 16px
    text-align center

  .no-schedule
    font-size 15px
    line-height 18px
    text-align center
    margin-top 40px

  .schedule-list
    margin-top 20px

  .ticklir-link
    background-color #ffffff
    border-radius 5px
    margin 20px 10px 10px
    border-bottom 1px solid #e0e0e0
    display flex
    padding 10px
    font-size 14px
    line-height 1.5
    font-weight bold
    -webkit-tap-highlight-color transparent

    &:active
      background-color #e6e6e6

