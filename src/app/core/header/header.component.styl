&:host
  position fixed
  top 0
  left 0
  width 100%
  height 44px
  color #ffffff
  z-index 100000

  .container
    max-width 600px
    display flex
    align-items center
    height 100%
    margin 0 auto

  .logo
    flex none
    height 25px
    width 25px
    background-image url(/assets/header/logo.png)
    background-repeat no-repeat
    background-position center
    background-size contain
    margin-left 10px
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    outline none
    cursor pointer

    &:active
      opacity 0.8

  .title
    font-size 18px
    margin-left 5px
    margin-right 10px
    flex 1
    line-height 20px

  .menu-button
    height 44px
    width 44px
    cursor pointer

    &:active
      .menu-icon
        opacity 0.8

    .menu-icon
      height 20px
      width 20px
