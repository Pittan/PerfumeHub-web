&:host
  position absolute
  top 0
  left 0
  width 100%
  height 100%

  .menu-container
    height 100%
    padding 0 10px
    overflow scroll
    background-color rgba(255, 255, 255, 0.9)
    display flex
    flex-direction column

  .menu-label
    font-size 12px
    font-weight 700
    margin 10px 0 0 5px

  .menu-cell
    flex none
    height 50px
    display flex
    align-items center
    border-bottom 1px solid #e0e0e0
    font-size 16px
    font-weight 700

    &:active
      background-color #e0e0e0

    .icon-login
    .icon-logout
      height 30px
      width 30px
      fill #616161
      margin-left 10px

    .cell-label
      margin-left 10px

  .version-info
    display flex
    align-items center
    flex-direction column
    flex none
    margin 20px 0 30px

    .app-icon
      margin-top 10px
      background-image url(https://img.garlicrice.xyz/pta/perfumehub.png)
      background-size contain
      background-position center
      background-repeat no-repeat
      border-radius 10px
      height 40px
      width 40px

    .app-name
      margin-top 5px
      font-size 16px
      line-height 20px
      font-weight 100

    .app-version

      font-size 10px
      line-height 16px

  .user-info
    display flex
    flex none
    flex-direction column
    margin 20px 0 0

    .label
      font-size 12px
      font-weight 700
      margin 0 0 5px 5px

    .profile-container
      display flex
      justify-content center
      flex 1
      width 100%

      .icon
        height 50px
        width 50px
        border-radius 25px
        background-size contain
        background-repeat no-repeat
        background-position center
        flex none
        margin-left 10px


      .user-container
        display flex
        flex-direction column
        justify-content center
        margin-left 10px
        flex 1

        .name
          line-height 18px
          word-break break-all
          font-weight 700

        .id
          font-size 12px

        .permission-container
          font-size 12px

          .permission-badge
            padding 2px 4px
            border 1px solid #e0e0e0
            border-radius 5px
