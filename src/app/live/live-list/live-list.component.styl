.header
  font-size 20px
  font-weight bold
  text-align center
  padding 10px 0
  margin 0 10px 15px
  border-bottom 1px solid #e0e0e0

.live
  background-color #ffffff
  border-radius 5px
  border-bottom 1px solid #e0e0e0
  margin 0 10px 15px
  padding-bottom 15px
  -webkit-tap-highlight-color transparent
  cursor pointer
  outline none

  &:hover
    opacity .8

  &:active
    background-color #e6e6e6

  .live-tour
    font-size 18px
    font-weight bold
    word-break break-all
    line-height 1.5
    padding 10px 20px 5px 20px

  .live-place
    font-size 14px
    padding 0 20px
    line-height 1.5

  .live-open ,.live-start
    font-size 12px
    color #808080
    padding 0 20px
    line-height 1.4
