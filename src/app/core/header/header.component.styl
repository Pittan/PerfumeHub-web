&:host
  position fixed
  top 0
  left 0
  width 100%
  height 44px
  background-color #489BC6
  color #ffffff
  display flex
  align-items center

  .logo
    flex none
    height 25px
    width 25px
    background-image url(/assets/header/logo.png)
    background-repeat no-repeat
    background-position center
    background-size contain
    margin-left 10px
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    outline none

    &:active
      opacity 0.8

  .title
    font-size 18px
    margin-left 5px
    margin-right 10px
    flex 1
    line-height 20px

  .menu-button
    height 44px
    width 44px

    &:active
      .menu-icon
        opacity 0.8

    .menu-icon
      height 20px
      width 20px
